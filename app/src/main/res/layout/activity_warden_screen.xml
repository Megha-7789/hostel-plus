<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Lavender"
    android:id="@+id/wardenlayout">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        android:id="@+id/myToolBar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_menu_24"
            android:layout_alignParentEnd="true"
            android:background="@color/Lavender"
            android:id="@+id/right_icon"
            android:padding="10dp"
            android:contentDescription="menu"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warden"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_centerInParent="true" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myToolBar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:background="@color/Lavender"
        android:orientation="vertical"
        android:padding="40dp">

        <Button
            android:id="@+id/regButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="Registration"
            android:textColor="@color/Lavender"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Add other buttons here -->

        <Button
            android:id="@+id/roomButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="Attendence"
            android:textColor="@color/Lavender"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/viewdetailsButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="View details"
            android:textColor="@color/Lavender"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ViewcomplaintsButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="View Complaints"
            android:textColor="@color/Lavender"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/editnoticeButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="Edit Notice Board"
            android:textColor="@color/Lavender"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/connectparentButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="Connect Parent"
            android:textColor="@color/Lavender"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addwardenButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="Add Warden"
            android:textColor="@color/Lavender"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>
